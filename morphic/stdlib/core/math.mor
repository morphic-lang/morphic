import Bool expose { and, or }

rem(a: Int, b: Int): Int =
  a - b * (a / b)

mod(a: Int, b: Int): Int =
  if a < 0 {
    rem(a, b) + b
  } else {
    rem(a, b)
  }

int_bit_not(a: Int): Int =
  -a - 1

pow(a: Int, b: Int): Int =
  pow_rec(1, a, b)

pow_rec(accum: Int, a: Int, b: Int): Int =
  if (b = 0) {
    accum
  } else {
    pow_rec(a * accum, a, b - 1)
  }

byte_pow(a: Byte, b: Byte): Byte =
  byte_pow_rec(1b, a, b)

byte_pow_rec(accum: Byte, a: Byte, b: Byte): Byte =
  if (b =& 0b) {
    accum
  } else {
    byte_pow_rec(a *& accum, a, b -& 1b)
  }
